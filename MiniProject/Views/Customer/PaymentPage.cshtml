@model GixxWings.Models.Payment

@{
    ViewData["Title"] = "PaymentPage";
}
<style>
    .row{
        background-image: url(../images/payment.jpg);   
        background-size:cover;
        background-position:center;
        height:80vh;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form asp-action="PaymentPage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="font-weight:bold">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" type="number" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-weight:bold">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" type="date" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-weight:bold">
                <label asp-for="Cvv" class="control-label">CVV</label>
                <input asp-for="Cvv" type="password"  class="form-control" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="PayNow"  onclick="paidSuccessfully()" asp-action="Logout" asp-controller="Customer" class="btn btn-primary" />
                <a asp-controller ="Customer" asp-action="SearchPage"><input type="button" value="Cancel"></a>
            </div>
            <br/>
        </form>
    </div>
</div>
<script>
        function paidSuccessfully() {
            alert("Successfully Paid");
        }
    </script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
